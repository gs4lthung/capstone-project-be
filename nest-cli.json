{
  "$schema": "https://json.schemastore.org/nest-cli",
  "collection": "@nestjs/schematics",
  "sourceRoot": "src",
  "compilerOptions": {
    "deleteOutDir": true,
    "webpack": true
  },
  "monorepo": true,
  "projects": {
    "api-gateway": {
      "type": "application",
      "root": "apps/api-gateway",
      "entryFile": "main",
      "sourceRoot": "apps/api-gateway/src",
      "compilerOptions": {
        "webpack": false,
        "tsConfigPath": "apps/api-gateway/tsconfig.app.json",
        "assets": [
          {
            "include": "src/mail-templates/**/*",
            "outDir": "dist/apps/api-gateway/src",
            "watchAssets": true
          }
        ]
      }
    },
    "config": {
      "type": "library",
      "root": "libs/config",
      "entryFile": "index",
      "sourceRoot": "libs/config/src",
      "compilerOptions": {
        "tsConfigPath": "libs/config/tsconfig.lib.json"
      }
    },
    "database": {
      "type": "library",
      "root": "libs/database",
      "entryFile": "index",
      "sourceRoot": "libs/database/src",
      "compilerOptions": {
        "tsConfigPath": "libs/database/tsconfig.lib.json"
      }
    },
    "shared": {
      "type": "library",
      "root": "libs/shared",
      "entryFile": "index",
      "sourceRoot": "libs/shared/src",
      "compilerOptions": {
        "tsConfigPath": "libs/shared/tsconfig.lib.json"
      }
    },
    "payos": {
      "type": "library",
      "root": "libs/payos",
      "entryFile": "index",
      "sourceRoot": "libs/payos/src",
      "compilerOptions": {
        "tsConfigPath": "libs/payos/tsconfig.lib.json"
      }
    },
    "ffmpeg": {
      "type": "library",
      "root": "libs/ffmpeg",
      "entryFile": "index",
      "sourceRoot": "libs/ffmpeg/src",
      "compilerOptions": {
        "tsConfigPath": "libs/ffmpeg/tsconfig.lib.json"
      }
    },
    "twilio": {
      "type": "library",
      "root": "libs/twilio",
      "entryFile": "index",
      "sourceRoot": "libs/twilio/src",
      "compilerOptions": {
        "tsConfigPath": "libs/twilio/tsconfig.lib.json"
      }
    },
    "paypal": {
      "type": "library",
      "root": "libs/paypal",
      "entryFile": "index",
      "sourceRoot": "libs/paypal/src",
      "compilerOptions": {
        "tsConfigPath": "libs/paypal/tsconfig.lib.json"
      }
    },
    "agora": {
      "type": "library",
      "root": "libs/agora",
      "entryFile": "index",
      "sourceRoot": "libs/agora/src",
      "compilerOptions": {
        "tsConfigPath": "libs/agora/tsconfig.lib.json"
      }
    },
    "bunny": {
      "type": "library",
      "root": "libs/bunny",
      "entryFile": "index",
      "sourceRoot": "libs/bunny/src",
      "compilerOptions": {
        "tsConfigPath": "libs/bunny/tsconfig.lib.json"
      }
    }
  }
}