    "tsconfig-paths": "^4.2.0",
    "typeorm-ts-node-esm": "^0.3.20",
    "typescript": "^5.1.3"
  },
  "jest": {
    "moduleFileExtensions": [
      "js",
      "json",
      "ts"
    ],
    "rootDir": ".",
    "testRegex": ".*\\.spec\\.ts$",
    "transform": {
      "^.+\\.(t|j)s$": "ts-jest"
    },
    "collectCoverageFrom": [
      "**/*.(t|j)s"
    ],
    "coverageDirectory": "./coverage",
    "testEnvironment": "node",
    "roots": [
      "<rootDir>/apps/",
      "<rootDir>/libs/"
    ],
    "moduleNameMapper": {
      "^@app/config(|/.*)$": "<rootDir>/libs/config/src/$1",
      "^@app/database(|/.*)$": "<rootDir>/libs/database/src/$1",
      "^@app/shared(|/.*)$": "<rootDir>/libs/shared/src/$1",
      "^@app/websocket(|/.*)$": "<rootDir>/libs/websocket/src/$1",
      "^@app/firebase(|/.*)$": "<rootDir>/libs/firebase/src/$1",
      "^@app/redis(|/.*)$": "<rootDir>/libs/redis/src/$1",
      "^@app/i18n(|/.*)$": "<rootDir>/libs/i18n/src/$1",
      "^@app/payos(|/.*)$": "<rootDir>/libs/payos/src/$1",
      "^@app/ffmpeg(|/.*)$": "<rootDir>/libs/ffmpeg/src/$1",
      "^@app/aws(|/.*)$": "<rootDir>/libs/aws/src/$1",
      "^@app/twilio(|/.*)$": "<rootDir>/libs/twilio/src/$1",
      "^@app/paypal(|/.*)$": "<rootDir>/libs/paypal/src/$1"
    }
  }
