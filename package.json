{
  "name": "capstone-project",
  "version": "0.0.1",
  "description": "Lâm Tiên Hưng",
  "author": "",
  "private": true,
  "license": "MIT",
  "scripts": {
    "typeorm": "ts-node -r tsconfig-paths/register ./node_modules/typeorm/cli",
    "migration:run": "npm run typeorm -- migration:run -d libs/database/src/data-source.ts",
    "migration:run:prod": "node ./node_modules/typeorm/cli.js migration:run -d dist/libs/database/src/data-source.js",
    "migration:generate": "npm run typeorm -- migration:generate -d libs/database/src/data-source.ts libs/database/src/migrations/database-migration",
    "migration:revert": "npm run typeorm -- migration:revert -d libs/database/src/data-source.ts",
    "migration:revert:prod": "node ./node_modules/typeorm/cli.js migration:revert -d dist/libs/database/src/data-source.js",
    "seed": "ts-node -r tsconfig-paths/register",
    "seed:prod": "node dist/libs/database/src/seeds/seed.js",
    "build": "nest build",
    "build:database": "npx tsc -p ./libs/database/tsconfig.lib.json",
    "format": "prettier --write \"apps/**/*.ts\" \"libs/**/*.ts\"",
    "start": "nest start",
    "start:dev": "nest start --watch",
    "start:debug": "nest start --debug --watch",
    "start:prod": "node dist/apps/api-gateway/main",
    "lint": "eslint \"{src,apps,libs,test}/**/*.ts\" --fix",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:cov": "jest --coverage",
    "test:debug": "node --inspect-brk -r tsconfig-paths/register -r ts-node/register node_modules/.bin/jest --runInBand",
    "test:e2e": "jest --config ./apps/api-gateway/test/jest-e2e.json"
  },
