sequenceDiagram
    actor User
    participant controller as WalletController
    participant auth as AuthGuard
    participant service as WalletService
    participant db as DataSource

    User->>controller: GET /wallets
    activate controller

    controller->>auth: validate JWT
    activate auth
    auth-->>controller: valid
    deactivate auth

    controller->>service: findAll(pagination, sort, filter)
    activate service

    service->>db: query wallets with pagination
    activate db
    db-->>service: paginated wallets
    deactivate db

    service-->>controller: PaginateObject~Wallet~
    deactivate service

    controller-->>User: HTTP 200 with wallets
    deactivate controller
