@startuml UpdateSessionCalendarClassDiagram
left to right direction

class Coach {
  -id: number
  -fullName: string
  -email: string
  -phoneNumber: string
  -role: Role
  +updateSession(): void
}

class Session {
  -id: number
  -name: string
  -description: string
  -sessionNumber: number
  -scheduleDate: Date
  -startTime: string
  -endTime: string
  -durationInMinutes: number
  -status: SessionStatus
  -completedAt: Date
  -createdAt: Date
  -updatedAt: Date
}

class Course {
  -id: number
  -name: string
  -status: CourseStatus
  -startDate: Date
  -endDate: Date
  -createdBy: Coach
  -sessions: Session[]
  -enrollments: Enrollment[]
}

class Enrollment {
  -id: number
  -status: EnrollmentStatus
  -user: Learner
  -course: Course
}

class Learner {
  -id: number
  -fullName: string
  -email: string
  -phoneNumber: string
  -role: Role
}

class Notification {
  -id: number
  -title: string
  -body: string
  -navigateTo: string
  -type: NotificationType
  -isRead: boolean
  -user: Learner
  -createdAt: Date
}

enum SessionStatus {
  PENDING
  SCHEDULED
  IN_PROGRESS
  COMPLETED
  CANCELLED
}

enum EnrollmentStatus {
  PENDING_GROUP
  CONFIRMED
  LEARNING
  UNPAID
  CANCELLED
  DONE
}

enum CourseStatus {
  PENDING_APPROVAL
  APPROVED
  REJECTED
  CANCELLED
  COMPLETED
  FULL
  READY_OPENED
  ON_GOING
}

enum NotificationType {
  INFO
  SUCCESS
  WARNING
  ERROR
}

class UpdateSessionDto {
  +scheduleDate?: Date
  +startTime?: string
  +endTime?: string
  +name?: string
  +description?: string
}

class CustomApiResponse {
  -statusCode: number
  -message: string
  -data: T
}

Coach "1" -- "many" Session: updates
Session "many" -- "1" Course: belongs to
Course "1" -- "many" Enrollment: has
Learner "1" -- "many" Enrollment: has
Learner "1" -- "many" Notification: receives
Session --> SessionStatus: uses
Enrollment --> EnrollmentStatus: uses
Course --> CourseStatus: uses
Notification --> NotificationType: uses

@enduml
